<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="wizard_recharge_meter_form">
            <field name="name">wizard.recharge.meter.form</field>
            <field name="model">wizard.recharge.meter</field>
            <field name="arch" type="xml">
                <form string="Recharge">
                    <group>
                        <field name="address" readonly="1"/>
                        <field name="imei" readonly="1"/>
                        <field name="amount"/>
                    </group>

                    <footer>
                        <button class="oe_highlight"
                                name="action_recharge_meter"
                                string="Recharge Meter"
                                type="object"
                                confirm="Are you sure you want to RECHARGE the meter?"
                        />

                        <button class="oe_link" special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>